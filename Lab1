########    Ejercicio 1    ######
###########################
#include <iostream>
#include <cstdlib>
#include <iomanip>
using namespace std;

double p;
double n;
double v;

int V1 = rand()%100+1;

int main()
{
    bool a[V1];

    for (int i=0; i<V1;i++)
    {
        if(a[i])
        {
            puts("T");
            v = v+1;
        }
        else {
            puts("F");
            n = n + 1;
        }
    }
    p=(v/sizeof(a))*100;
    cout << "True: " << v << endl;
    cout << "False: " << n << endl;
    cout << "% of True: " << setprecision(6) << p << endl;
}

